<div><%= @customer.first_name %>さんの注文履歴</div>

<table border="1" rules="rows">
    <thead>
      <tr>
        <th width="300" height="60">購入日時</th>
        <th width="130" height="60">注文個数</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M"), admin_order_path(order.id) %></td>
            <% @order_amount =0 %>
            <% order.order_details.each do |order_detail| %>
              <% @order_amount = @order_amount + order_detail.amount %>
            <% end %>
            <td><%= @order_amount %></td>
        </tr>
      <% end %>
    </tbody>
</table>