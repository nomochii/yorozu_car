<div class="admin_top_titl">
  <h1>注文履歴一覧</h1>
</div>
<div class="admin_top">

  <table border="1" rules="rows">
    <thead>
      <tr>
        <th width="300" height="60">購入日時</th>
        <th width="130" height="60">購入者</th>
        <th width="130" height="60">注文個数</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td></td>
          <td><%= order.customer.first_name %><%= order.customer.last_name %></td>
            <% @order_amount =0 %>
            <% order.order_details.each do |order_detail| %>
              <% @order_amount = @order_amount + order_detail.amount %>
            <% end %>
            <td><%= @order_amount %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>