<div class="admin_newitem_title">
  <h1>商品新規登録</h1>
</div>

<div class="admin_newitem">
  <%= form_with model: @newitem, url: admin_items_path do |f| %>
    <div>
      商品画像
      <!--画像のみ投稿可能にしてます。-->
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div>
      商品名
      <%= f.text_field :product_name %>
    </div>
    <div>
      年式
      <%= f.text_area :year %>年
    </div>
    <div>
      走行
      <%= f.text_area :mileage %>万km
    </div>
    <div>
      車検
      <%= f.text_area :inspection %>
    </div>
    <div>
      修復
      <%= f.text_area :repair %>
    </div>
    <div>
      整備
      <%= f.text_area :maintenance %>
    </div>
    <div>
      税抜価格
      <%= f.text_area :price %>円
    </div>
    <%= f.submit '新規登録' %>
  <% end %>
</div>