<h1>注文履歴詳細</h1>
<div class="container">
  <div class="row">
    <div class="col-6">

      <h2>注文情報</h2>
      <table border="1">
        <thead>
          <tr>
            <th>注文日</th>
              <td width="400" height="50"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
              <td>
                <div>〒<%= @order.shipping_postal_code %></div>
                <div><%= @order.shipping_address %></div>
                <div><%= @order.shipping_name %></div>
              </td>
          </tr>
          <tr>
            <th>支払方法</th>
              <td><%= @order.payment_method_i18n%></td>
          </tr>
        </thead>
      </table>

        </tbody>
      </table>
    </div>
    <div class="col-6">
      <h2>請求情報</h2>
      <table border="1">
        <thead>
          <tr>
            <th>商品合計</th>
              <td width="200" height="50"><%=  @order.total_amount - @order.postage %></td>
          </tr>
          <tr>
            <th>配送料</th>
              <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
              <td><%= @order.total_amount.to_s(:dalimited) %></td>
          </tr>
        </thead>
      </table>
    </div>
  </div>
    <h2>注文内容</h2>
  <div class="order_details_show">
    <table border="1">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td width="500" height="50"><%= order_detail.item.product_name %></td>
            <td width="50" height="50"><%= order_detail.purchase_price %></td>
            <td width="50" height="50"><%= order_detail.amount %></td>
            <td width="100" height="50"><%= order_detail.subtotal%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>
</div>