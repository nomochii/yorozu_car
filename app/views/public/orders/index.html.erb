<div class="order_history_list_title">
<h1>注文履歴一覧</h1>
</div>

<div class="order_history_list">
  <table border="1">
    <thead>
      <tr>
        <th width="100" height="60">注文日</th>
        <th width="500" height="60">配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            <p>〒<%= order.shipping_postal_code %></p>
            <p><%= order.shipping_address %></p>
            <p><%= order.shipping_name %></p>
          </td>
          <td>
            <% order.order_details.each do |order_detail| %>
              <p><%= order_detail.item.product_name %></p>
            <% end %>
          </td>
          <td><%= order.total_amount.to_s(:dalimited) %></td>
          <td><%= link_to "表示する",order_path(order.id), class: 'btn btn-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>