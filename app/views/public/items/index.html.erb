<div class="container">
  <div class="row">
    <div class="item_index_title">
      <h1>商品一覧(全<%= @items.count %>件)</h1>
    </div>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-3">
        <div>
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.image, size: "200x200" %>
          <% end %>
        </div>
        <div class="row">
          <p><%= link_to item.product_name,item_path(item.id) %></p>
        </div>
        <div class="row">
          <p><%= link_to number_with_delimiter(item.price), item_path(item.id) %>円</p>
        </div>
      </div>
    <% end %>
  </div>

  <%= paginate @items %>
</div>